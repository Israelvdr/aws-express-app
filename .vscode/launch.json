{
  "version": "2.0.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Stack",
        "cwd": "${workspaceRoot}/node-express",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run-script", "start",
        ],
        "preLaunchTask": "start-db",
        "postDebugTask": "stop-db",
        "serverReadyAction":{
            "pattern": "Listening on port ([0-9]+)",
            "uriFormat": "http://localhost:%s",
            "action": "openExternally",
            "killOnServerStop": false
        }
    }
  ]
}